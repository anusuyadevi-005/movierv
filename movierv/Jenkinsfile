pipeline {
    agent any

    tools {
        nodejs "Node16"   // NodeJS tool configured in Jenkins
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/anusuyadevi-005/movierv.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                dir('movierv') {    // ðŸ‘ˆ change this to the folder where package.json is
                    bat "npm install"
                }
            }
        }

        stage('Build') {
            steps {
                dir('movierv') {    // ðŸ‘ˆ same folder
                    bat "npm run build"
                }
            }
        }

        stage('Archive') {
            steps {
                archiveArtifacts artifacts: '**/build/**', followSymlinks: false
            }
        }
    }
}
